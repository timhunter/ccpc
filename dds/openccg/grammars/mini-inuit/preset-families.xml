   <family closed="true" pos="V" name="unergative">
      <entry name="primary">
         <complexcat>
            <atomcat type="s">
               <fs id="100">
                  <feat attr="index">
                     <lf>
                        <nomvar name="E"/>
                     </lf>
                  </feat>
               </fs>
            </atomcat>
            <slash dir="\"/>
            <atomcat type="np">
               <fs id="1">
                  <feat attr="case" val="s-case"/>
                  <feat attr="index">
                     <lf>
                        <nomvar name="X1"/>
                     </lf>
                  </feat>
               </fs>
            </atomcat>
            <lf>
               <satop nomvar="E">
                  <prop name="[*DEFAULT*]"/>
                  <diamond mode="Arg1">
                     <nomvar name="X1"/>
                  </diamond>
                  <diamond mode="Arg2">
                     <nom name="one"/>
                  </diamond>
               </satop>
            </lf>
         </complexcat>
      </entry>
   </family>
